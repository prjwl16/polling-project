{
  "name": "live-polling-system",
  "version": "1.0.0",
  "description": "A live polling system with teacher and student roles",
  "main": "server/server.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && npm run dev",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "build:client": "cd client && npm install && npm run build",
    "start": "cd server && npm start",
    "start:server": "cd server && npm start",
    "install-all": "npm install && cd server && npm install && cd ../client && npm install",
    "deploy:frontend": "cd client && npm run build",
    "deploy:backend": "cd server && npm start"
  },
  "keywords": ["polling", "real-time", "socket.io", "react", "express"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
